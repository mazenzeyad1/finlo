{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "paths": {
      "environments/*": ["src/environments/*"]
    },
    "strict": true,
  "skipLibCheck": true,
  "noEmit": false,
    "types": ["node"],
    "allowJs": true
  },
  "angularCompilerOptions": {
    "compilationMode": "full"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.html",
    "src/**/*.css"
  ]
}
