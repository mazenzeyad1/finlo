generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Provider {
  plaid
  flinks
  manual
}

enum ConnectionStatus {
  active
  error
  revoked
}

enum AccountType {
  checking
  savings
  credit
  loan
  investment
}

enum BudgetPeriod {
  monthly
  weekly
  custom
}

enum EmailTokenPurpose {
  VERIFY_EMAIL
  RESET_PASSWORD
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String?
  password    String
  createdAt   DateTime  @default(now())
  emailVerified Boolean @default(false)
  connections Connection[]
  budgets     Budget[]
  categories  Category[]
  refreshTokens RefreshToken[]
  emailTokens EmailToken[]
  householdsOwned Household[] @relation("HouseholdOwner")
  householdMembers HouseholdMember[]
  onboardingProgress OnboardingProgress?
  sessions     Session[]
}

model Institution {
  id          String   @id
  name        String
  logoUrl     String?
  provider    Provider
  createdAt   DateTime @default(now())
  connections Connection[]
}

model Connection {
  id            String           @id @default(cuid())
  userId        String
  institutionId String
  status        ConnectionStatus @default(active)
  accessToken   String
  refreshToken  String?
  scope         String?
  linkedAt      DateTime         @default(now())
  cursor        String?
  user          User             @relation(fields: [userId], references: [id])
  institution   Institution      @relation(fields: [institutionId], references: [id])
  accounts      Account[]
}

model Household {
  id        String            @id @default(cuid())
  name      String
  ownerId   String
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  owner     User              @relation("HouseholdOwner", fields: [ownerId], references: [id])
  members   HouseholdMember[]
}

enum HouseholdRole {
  owner
  member
}

model HouseholdMember {
  id          String         @id @default(cuid())
  householdId String
  userId      String
  role        HouseholdRole  @default(member)
  invitedAt   DateTime       @default(now())
  joinedAt    DateTime?
  household   Household      @relation(fields: [householdId], references: [id])
  user        User           @relation(fields: [userId], references: [id])

  @@unique([householdId, userId])
}

model Account {
  id           String      @id @default(cuid())
  connectionId String
  name         String
  mask         String?
  type         AccountType
  currency     String
  balance      Decimal     @default(0)
  connection   Connection  @relation(fields: [connectionId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id            String   @id @default(cuid())
  accountId     String
  date          DateTime
  description   String
  amount        Decimal
  currency      String
  pending       Boolean  @default(false)
  categoryId    String?
  externalId    String?  @unique
  account       Account  @relation(fields: [accountId], references: [id])
  category      Category? @relation(fields: [categoryId], references: [id])

  @@index([accountId, date])
  @@index([categoryId, date])
}

model Category {
  id           String        @id @default(cuid())
  userId       String
  name         String
  icon         String?
  user         User          @relation(fields: [userId], references: [id])
  transactions Transaction[]
  budgets      CategoryOnBudget[]
}

model Budget {
  id         String            @id @default(cuid())
  userId     String
  name       String
  period     BudgetPeriod
  start      DateTime
  end        DateTime
  amount     Decimal
  categories CategoryOnBudget[]
  user       User              @relation(fields: [userId], references: [id])
}

model CategoryOnBudget {
  id         String   @id @default(cuid())
  budgetId   String
  categoryId String
  budget     Budget   @relation(fields: [budgetId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
}

model RefreshToken {
  id           String   @id @default(cuid())
  userId       String
  sessionId    String
  tokenHash    String
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  revokedAt    DateTime?
  replacedById String?
  user         User     @relation(fields: [userId], references: [id])
  session      Session  @relation(fields: [sessionId], references: [id])
  replacedBy   RefreshToken? @relation("RefreshTokenReplacement", fields: [replacedById], references: [id])
  previous     RefreshToken[] @relation("RefreshTokenReplacement")

  @@index([tokenHash])
}

model EmailToken {
  id         String            @id @default(cuid())
  userId     String
  purpose    EmailTokenPurpose
  tokenHash  String
  expiresAt  DateTime
  usedAt     DateTime?
  createdAt  DateTime         @default(now())
  user       User             @relation(fields: [userId], references: [id])

  @@index([userId, purpose, tokenHash])
}

model EmailLog {
  id         String   @id @default(cuid())
  userId     String?
  template   String
  toAddress  String
  providerId String?
  status     String
  createdAt  DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  userAgent String?
  ip        String?
  createdAt DateTime @default(now())
  lastSeen  DateTime @updatedAt
  revokedAt DateTime?
  user      User     @relation(fields: [userId], references: [id])
  refreshTokens RefreshToken[]
}

model OnboardingProgress {
  userId    String   @id
  step      String
  payload   Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}
